{
  "manifest_version": 3,
  "name": "RoPhim Blocker",
  "version": "2.0.0",
  "description": "Chặn ads, popup, overlay trên RoPhim",

  "permissions": [
    "declarativeNetRequest"
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    }
  ],
  
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}